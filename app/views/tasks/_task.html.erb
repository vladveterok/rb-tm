<li id="<%= dom_id(task)%>" class="list-group-item list-group-item-action">
  <%= check_box_tag dom_id(task, "checkbox"), 1, task.completed?, data: { remote: true, url: toggle_task_path(task), 
    method: :post } %>
  <span class="task-list__task-name ml-3">
    <a class="sortable"><%= link_to task.name, task, id: dom_id(task), style: "text-decoration:none", class: "text-secondary" %></a>
  </span>


  <% unless task.completed? %>
    <span class="task-list__task-controls">
      <%= link_to '<span class="far fa-edit"></span>'.html_safe, edit_task_path(task), class: "link", remote: true %>
      <%= link_to '<span class="far fa-trash-alt"></span>'.html_safe, task_path(task), method: :delete, data: { confirm: 'Are you really-really sure?'},
        remote: true, class: 'delete_task ml-3' %>
    </span>

    <% if task.due_day.present? %>
      <time class="task-time<%= task.due_day <= Date.today ? ' is-due' : '' %>" datetime="<%= task.due_day.strftime('%FT%T') %>">
        <%= task.due_day.strftime("%m/%d") %>
      </time>
    <% end %>
  <% end %>
</li>
