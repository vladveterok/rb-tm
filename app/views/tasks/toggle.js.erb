$("#<%= dom_id(@task) %>").remove();

<% if @task.completed? %>
  $("[data-placeholder=completed_tasks][data-project-id=<%= @task.project_id %>]").append("<%= escape_javascript(render "task", task: @task) %>");
<% else %>
  $("[data-placeholder=uncompleted_tasks][data-project-id=<%= @task.project_id %>]").append("<%= escape_javascript(render "task", task: @task) %>");
<% end %>