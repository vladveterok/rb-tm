<%= form_with(model: @new_project, remote: true) do |form| %> <!-- why 'project' model is not an instance variable? -->

  <div class="field">
    <%= form.label :name %>
    <h2><%= form.text_field :name %></h2>
  </div>

  <div class="field">           <!-- rename to hidden_field -->
    <%= form.hidden_field :user_id, :value => current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

